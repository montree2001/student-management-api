{
    "name": "student-management-api",
    "description": "Student Data Management API System",
    "type": "project",
    "license": "MIT",
    "require": {
      "php": ">=7.4",
      "phpoffice/phpspreadsheet": "^1.29",
      "monolog/monolog": "^2.8"
    },
    "require-dev": {
      "phpunit/phpunit": "^9.5"
    },
    "autoload": {
      "psr-4": {
        "App\\": "src/",
        "App\\Classes\\": "classes/",
        "App\\Includes\\": "includes/"
      }
    },
    "scripts": {
      "test": "phpunit",
      "start": "php -S localhost:8000 -t public/",
      "install-db": "mysql -u root -p < database/schema.sql"
    },
    "config": {
      "optimize-autoloader": true
    }
  }